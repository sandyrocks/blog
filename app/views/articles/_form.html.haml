= simple_form_for @article do |f|
  - if @article.errors.any?
    .alert.alert-danger
      -@article.errors.full_messages.each do |error_message|
        %li= error_message
  = f.input :title, input_html: { class: 'form-control' }
  = f.input :description, as: :text, input_html: { rows: 10, class: 'form-control' }
  %br
  = f.select :category_id, Category.pluck(:name, :id), { prompt: 'Please Select'}, class: 'form-control'
  %br
  = f.button :submit, class: 'btn btn-primary form-control'